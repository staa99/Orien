<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:editTextColor">@color/editTextColor</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:button">@drawable/btn_bg</item>
    </style>
</resources>
